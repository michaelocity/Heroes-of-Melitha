<Window x:Class="HeroesMapEditor.NewMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeroesMapEditor"
        mc:Ignorable="d"
        Title="New Map" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="Width">Enter width of map</TextBox>
        <TextBox Name="Height">Enter height of map</TextBox>
        <WrapPanel>
            <Button IsDefault="True" Click="OK_Click">OK</Button>
            <Button IsCancel="True">Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
