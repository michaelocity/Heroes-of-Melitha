<Window x:Class="HeroesMapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeroesMapEditor"
        mc:Ignorable="d"
        Title="Map Editor" Height="450" Width="800">
    <StackPanel>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="NewFile_Click"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Open"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid ShowGridLines="True" Name="Map"></Grid>
    </StackPanel>
</Window>
